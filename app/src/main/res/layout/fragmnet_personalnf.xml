<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_personalnffragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_personalnffragmentr"/>
    <LinearLayout
        android:id="@+id/ll_personalnffragmentr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="?attr/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_download_personalnffragmentr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="15dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="打包下载"/>
        <TextView
            android:id="@+id/tv_delete_personalnffragmentr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="15dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="一键删除"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>