<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="?attr/selectableItemBackground">
    <ImageView
        android:id="@+id/iv_icon_fileorfolderitem"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_unknown_file"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_name_fileorfolderitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文件夹名或文件夹名"
        android:singleLine="true"
        android:ellipsize="middle"
        android:textColor="@color/design_default_color_on_secondary"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_icon_fileorfolderitem"
        app:layout_constraintRight_toRightOf="@id/cb_isselect_fileorfolderitem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_timeandsize_fileorfolderitem"/>
    <LinearLayout
        android:id="@+id/ll_timeandsize_fileorfolderitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/iv_icon_fileorfolderitem"
        app:layout_constraintTop_toBottomOf="@id/tv_name_fileorfolderitem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/cb_isselect_fileorfolderitem">
        <TextView
            android:id="@+id/tv_time_fileorfolderitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="12dp"
            android:text="2020-10-12 12:21:48"/>
        <TextView
            android:id="@+id/tv_size_fileorfolderitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="12dp"
            android:text="5.21M"/>
    </LinearLayout>
    <CheckBox
        android:id="@+id/cb_isselect_fileorfolderitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>